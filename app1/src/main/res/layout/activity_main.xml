<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.scut.pictureprogressbar.MainActivity">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start"
        android:id="@+id/btn_start"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ANIM_FRAME:"
        android:textColor="#000000"
        android:textSize="16sp"/>

    <com.yanzhikai.pictureprogressbar.PictureProgressBar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:drawable="@drawable/test_shape"
        app:max="1000"
        app:isSetBar="true"
        app:progressHeight="10dp"
        app:animMode="ANIM_FRAME"
        app:rotateRate="30"
        app:drawableHeightOffset="0dp"
        app:progressHeightOffset="15dp"
        app:scaleMax="1.8"
        app:scaleMin="0.5"
        app:scaleRate="0.1"
        app:refreshTime="100"
        app:isGradient="true"
        app:gradientStartColor="#ff0000"
        app:gradientEndColor="#ffff00"
        android:id="@+id/pb_1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ANIM_NULL:"
        android:textColor="#000000"
        android:textSize="16sp"/>
    <com.yanzhikai.pictureprogressbar.PictureProgressBar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:drawable="@drawable/b333"
        app:max="1000"
        app:roundY="20dp"
        app:roundX="20dp"
        app:halfDrawableHeight="20dp"
        app:halfDrawableWidth="20dp"
        app:animMode="ANIM_NULL"
        app:isGradient="true"
        app:gradientStartColor="#ff0000"
        app:gradientEndColor="#ffff00"
        android:id="@+id/pb_2"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ANIM_ROTATE:"
        android:textColor="#000000"
        android:textSize="16sp"/>
    <com.yanzhikai.pictureprogressbar.PictureProgressBar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:drawable="@drawable/test_shape"
        app:max="1000"
        app:isSetBar="true"
        app:roundX="20dp"
        app:progressHeight="10dp"
        app:halfDrawableHeight="15dp"
        app:halfDrawableWidth="15dp"
        app:animMode="ANIM_ROTATE"
        app:rotateRate="15"
        app:isGradient="true"
        app:gradientStartColor="#ff00ff"
        app:gradientEndColor="#00ff00"
        android:id="@+id/pb_3"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ANIM_SCALE:"
        android:textColor="#000000"
        android:textSize="16sp"/>
    <com.yanzhikai.pictureprogressbar.PictureProgressBar
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:drawable="@drawable/test_shape"
        app:max="1000"
        app:isSetBar="true"
        app:roundX="20dp"
        app:progressHeight="10dp"
        app:halfDrawableHeight="15dp"
        app:halfDrawableWidth="15dp"
        app:animMode="ANIM_SCALE"
        app:scaleMin="0.4"
        app:scaleMax="1.6"
        app:scaleRate="0.1"
        app:isGradient="true"
        app:gradientStartColor="#0000ff"
        app:gradientEndColor="#00ff00"
        android:id="@+id/pb_4"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ANIM_ROTATE_SCALE:"
        android:textColor="#000000"
        android:textSize="16sp"/>
    <com.yanzhikai.pictureprogressbar.PictureProgressBar
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:drawable="@drawable/test_shape"
        app:max="1000"
        app:isSetBar="true"
        app:roundX="20dp"
        app:progressHeight="10dp"
        app:halfDrawableHeight="15dp"
        app:halfDrawableWidth="15dp"
        app:animMode="ANIM_ROTATE_SCALE"
        app:rotateRate="15"
        app:scaleMin="0.4"
        app:scaleMax="1.6"
        app:scaleRate="0.1"
        app:isGradient="true"
        app:gradientStartColor="#aa00ff"
        app:gradientEndColor="#00ffaa"
        android:id="@+id/pb_5"
        />
</LinearLayout>
